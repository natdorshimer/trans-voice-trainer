{
  "private": true,
  "scripts": {
    "dev:worklet": "esbuild app/lib/audio-worklet/recorder-processor.ts --bundle --outfile=public/audio/recorder-processor.js --format=esm --platform=browser --watch",
    "build:worklet": "esbuild app/lib/audio-worklet/*.ts --bundle --outfile=public/audio/recorder-processor.js --format=esm --platform=browser --minify",
    "pre-build": "npm run build:worklet && npm run copy-wasm",
    "build": "npm run pre-build && next build",
    "build:web": "export NEXT_PUBLIC_TRANS_VOICE_PATH='/trans-voice-trainer' && npm run pre-build && next build",
    "build:mobile": "export NEXT_PUBLIC_TRANS_VOICE_PATH='' && npm run build && npx cap sync android",
    "dev": "export NEXT_PUBLIC_TRANS_VOICE_PATH='' && npm run pre-build && next dev --turbopack",
    "start": "npm run build && next start",
    "copy-wasm": "node scripts/copy-wasm.js",
    "predeploy": "npm run build:web",
    "deploy": "gh-pages -d out -b gh-pages"
  },
  "dependencies": {
    "@alexanderolsen/libsamplerate-js": "^2.1.2",
    "@capacitor/android": "^7.2.0",
    "@capacitor/cli": "^7.2.0",
    "@capacitor/core": "^7.2.0",
    "@tailwindcss/forms": "^0.5.10",
    "autoprefixer": "10.4.20",
    "chroma.ts": "^1.0.10",
    "clsx": "^2.1.1",
    "durand-kerner": "^1.0.0",
    "essentia.js": "^0.1.3",
    "gh-pages": "^6.3.0",
    "idb": "^8.0.2",
    "mathjs": "^14.4.0",
    "next": "latest",
    "next-auth": "5.0.0-beta.25",
    "postcss": "8.5.1",
    "react": "latest",
    "react-dom": "latest",
    "react-icons": "^5.5.0",
    "tailwindcss": "3.4.17",
    "typescript": "5.7.3",
    "vosk-browser": "^0.0.8",
    "window-function": "^2.1.0",
    "zustand": "^3.6.0"
  },
  "devDependencies": {
    "@capacitor/filesystem": "^7.0.1",
    "@types/audioworklet": "^0.0.72",
    "@types/node": "22.10.7",
    "@types/react": "19.0.7",
    "@types/react-dom": "19.0.3",
    "esbuild": "^0.25.2",
    "postcss-import": "^16.1.0"
  }
}
